{
  "name": "mit-backend-25E3_3",
  "version": "0.1.0",
  "description": "API REST para gerenciamento RH com autenticação e CRUD completo usando Express v4",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only --clear src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts --ignore-pattern '**/*.test.ts'",
    "lint:fix": "eslint src/**/*.ts --ignore-pattern '**/*.test.ts' --fix",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart",
    "docker:clean": "docker compose down -v && docker system prune -f",
    "dev:docker": "cp env.docker.example .env && npm run docker:up && sleep 5 && npm run dev"
  },
  "keywords": [
    "api",
    "rest",
    "typescript",
    "employees",
    "authentication",
    "express4"
  ],
  "author": "Student",
  "license": "MIT",
  "dependencies": {
    "@types/mongoose": "^5.11.96",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
